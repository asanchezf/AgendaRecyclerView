<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:id="@+id/cv"

        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/md_brown_50"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp">

            <ImageView
                android:id="@+id/category"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="0dp"
                android:src="@drawable/imgcontacto3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <!--android:textColor="#5d4037"-->
            <TextView

                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text1"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textStyle="bold"
                android:textColor="#795548"

                android:textSize="15dp"
                android:layout_alignTop="@+id/category"
                android:layout_toRightOf="@+id/category"
                android:layout_toEndOf="@+id/category"
                android:maxLines="1" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text2"
                android:textColor="@color/md_orange_A400"
                android:maxLines="1"
                android:layout_below="@+id/text1"
                android:layout_toRightOf="@+id/category"
                android:layout_toEndOf="@+id/category" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text1"
                android:layout_alignParentRight="true"
                android:text="Sin categoría"
                android:textStyle="italic"

                />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text2"
                android:layout_alignBottom="@+id/text2"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/text3"
                android:layout_marginLeft="2dp"
                android:text="TextView"
                android:textStyle="italic"
                />

            <Button
                android:id="@+id/btncontactar"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="CONTACTAR"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/text4"
                android:layout_alignEnd="@+id/text4" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="70dp"

                android:text="Observaciones"
                android:textColor="#727272"
                android:id="@+id/txtobservaciones"

                android:layout_below="@+id/text2"
                android:layout_toRightOf="@+id/category"
                android:layout_alignRight="@+id/text2"
                android:layout_alignEnd="@+id/text2"
                android:layout_above="@+id/btnruta" />


            <ImageView
                android:id="@+id/posicionamiento"
                android:layout_width="25dp"
                android:layout_height="30dp"


                android:src="@drawable/icono_ubicacion"

                android:layout_below="@+id/txtobservaciones"
                android:layout_alignLeft="@+id/btncontactar"
                android:layout_alignStart="@+id/btncontactar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ubicación"
                android:textStyle="bold"
                android:id="@+id/txtubicacion"
                android:layout_alignBaseline="@+id/btnruta"
                android:layout_alignBottom="@+id/btnruta"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textStyle="bold"
                android:padding="0dp"
                android:text="Establecer ruta"
                android:id="@+id/btnruta"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtobservaciones"
                android:layout_alignStart="@+id/txtobservaciones" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>